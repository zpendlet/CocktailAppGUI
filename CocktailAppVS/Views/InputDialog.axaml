<!-- InputDialog.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CocktailAppVS.InputDialog"
        Width="300"
        Height="150">

    <StackPanel Spacing="10">
        <TextBlock Text="Enter the ID number of the desired drink." HorizontalAlignment="Center" Margin="10"/>
        <TextBox x:Name="InputTextBox" Width="200" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="OK" IsDefault="True" Click="OKClick" Margin="5"/>
            <Button Content="Cancel" IsCancel="True" Click="CancelClick" Margin="5"/>
        </StackPanel>
    </StackPanel>

</Window>
